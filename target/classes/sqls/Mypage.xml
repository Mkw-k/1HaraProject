<?xml version="1.0" encoding="UTF-8"?>
<!-- DTD지정  -->
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="Mypage">

	<select id="getTime" resultType="string">
		select now()
	</select>
	
	<!-- values(?,?,?,?) sql문법 대신에 Mybatis 문법#{}을 사용
	 get() 또는 set() 마이바티스가 결정해서 메서드실행-->
	<insert id="insertMember">
		insert into member(memberid,pwd,name,email) 
      values (#{memberid},#{pwd},#{name},#{email})
	</insert>
	
	<select id="readMember" resultType="bit.com.a.dto.MemberDto">
		select *
		from member
		where memberid=#{memberid}
	</select>
	
	<select id="readMemberWithIDPW" resultType="com.itwillbs.domain.MemberVO">
		select *
		from member
		where userid=#{userid} and userpw=#{userpw}
	</select>	
	
	<update id="updateMember">
		update member set name=#{name}, email=#{email}, updatedate=now()
		where memberid=#{memberid} and pwd=#{pwd}
	</update>
	
	<delete id="deleteMember">
		delete from member where memberid=#{memberid} and pwd=#{pwd}
	</delete>
</mapper>